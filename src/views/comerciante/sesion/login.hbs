<div class="container mt-3">
  <div class="card shadow">
      <div class="card-body">
          <div class="card-title font-weight-bold">
              <h3>Hola comerciante</h3>
          </div>
          <div class="card-text">

              <form method="POST" action="/comerciante/sesion/login" class="mt-4">
                  <div class="form-group">
                      <label for="email">Correo</label>
                      <input class="form-control" type="email" placeholder="" name="email" id="email" required>
                  </div>
                  <div class="form-group">
                      <label for="password">Contraseña</label>
                      <input type="password" class="form-control" id="password" name="password" required> 
                      <a href="/comerciante/sesion/recuperarClave" class="text-warning"><small class="mt-4">¿Olvidaste la contraseña?</small></a>
                  </div>
                  <button type="submit" class="btn btn-success">Ingresar</button>
                  
              </form>
              <a href="/comerciante/sesion/logup"><button class="btn btn-warning mt-3">Registrarse</button></a>

          </div>
      </div>
  </div>
</div>

{{>navegacionIndex}}