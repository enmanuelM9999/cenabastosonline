<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        position: relative;
        transition: 0.2s;
    }

    html {
        overflow-x: hidden;
    }

    /*Variables*/

    :root {
        /*Longitudes*/
        --header-height: 150px;
        --icon-size: 30px;
        --product-size: 100px;
        /*Colores*/
        --mega-green: rgb(2, 184, 117);
        --mega-orange: rgb(240, 173, 78);
        --white: rgb(255, 255, 255);
    }


    /* ----------- Mobile First------------------*/

    body {
        width: 100vw;
        height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .header {
        width: 100%;
        flex: 0 0 var(--header-height);
        border-bottom-left-radius: 40%;
        border-bottom-right-radius: 40%;


    }

    .header .back {
        width: 25px;
        height: 25px;
        position: absolute;
        top: 15px;
        left: 10px;
        background-image: url("../icons/back.svg");
        background-size: cover;
    }

    .header .product-img {
        width: 50%;
        height: 50%;
        transform: translateX(50%) scale(1.3);
        display: flex;
        justify-content: center;
        position: absolute;
        bottom: 0;
    }

    .product-img img {
        width: var(--product-size);
        height: var(--product-size);
    }

    .product-info {
        width: 100%;
        min-height: 200px;
        display: flex;
        flex-direction: column;
        top: 40px;
    }

    .product-name {
        width: 100%;
        min-height: 20px;
        display: flex;
        justify-content: center;
    }

    .product-info .product-data {
        width: 100%;
        min-height: 200px;
        margin-bottom: 50px;
        padding: 10px;
        display: flex;
        flex-direction: column;
    }

    .product-data .quantity-manager,
    .btn-add-to-car {
        width: 100%;
        min-height: 50px;
    }

    .product-data .quantity-manager {
        width: 100%;
        height: 200px;
        justify-content: center;
        align-items: center;

    }

    .quantity {
        width: 100%;
        height: 50px;
        display: flex;
        justify-content: center;
        margin-right: 5px;
    }

    .quantity-manager input {
        width: 100px;
        height: 50px;
        display: flex;
        justify-content: center;
    }

    .quantity-manager select {
        background-image: white;
        width: 100%;
        height: 50px;
    }

    .quantity-manager button {
        height: 100%;
    }

    .quantity button {
        width: 50px;
        background-color: var(--mega-green);
        border: 0 solid red;
        font-size: 30px;
        color: white;
        cursor: pointer;
    }

    #less {
        border-top-left-radius: 15px;
        border-bottom-left-radius: 15px;
        background-color: rgb(255, 123, 123);
    }

    #more {
        border-top-right-radius: 15px;
        border-bottom-right-radius: 15px;
    }

    .details {
        width: 100%;
        min-height: 150px;
        padding: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;

    }

    .details textarea {
        padding: 10px;
        min-height: 100px;
        width: 100%;
    }

    .price {
        width: 100%;
        height: 30px;
        display: flex;
        justify-content: center;
        color: var(--mega-green);
        margin-bottom: 10px;
    }

    .btn-add-to-car {
        display: flex;
        justify-content: center;
    }

    .btn-add-to-car button {
        width: 300px;
        background-color: var(--mega-green);
        border: 0 solid red;
        font-size: 15px;
        color: white;
        cursor: pointer;
        border-radius: 10px;
        padding: 5px;
    }
</style>

