<script>
    var producto = {
            idLocal: {{productoLocal.idLocal}},
            idPresentacionSeleccionada: {{ productoLocal.idPresentacionSeleccionada}},
            cantidadItem: {{ productoLocal.cantidadItem }},
            detallesCliente: "{{{productoLocal.detallesCliente}}}",
            precioUnitarioSeleccionado: {{ productoLocal.precioUnitarioSeleccionado}},
            presentaciones: {{{ productoLocal.htmlJSON }}}
        }

    $less = $("#less");
    $more = $("#more");

    $less.on("click", function () {
        var actual = $("#number").val();
        actual--;
        actual = Math.abs(actual);
        $("#number").val(actual);
        calcPrice();
    })

    $more.on("click", function () {
        var vari = $("#number").val();
        try {
            vari = parseInt(vari);
            vari++;
            $("#number").val(vari);
            calcPrice();

        } catch (error) {
            vari = 3;
            vari++;
            $("#number").val(vari);
            calcPrice();

        }
    })

    $("#number").on("change input load keyup readystatechange", function () {
        calcPrice();
    })

    function calcPrice() {
        var newPrice = producto.precioUnitarioSeleccionado * $("#number").val();
        $("#price").html("$" + newPrice);
    }
</script>

