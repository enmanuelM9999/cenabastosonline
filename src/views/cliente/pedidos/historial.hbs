<div class="container mt-3">

    <h2>Pedidos</h2>
    <nav class="mt-4 border-0">
        <div class="nav nav-tabs border-0" id="nav-tab" role="tablist">
            <a class="nav-item nav-link text-success" id="nav-pedidos-tab" href="#" role="tab"
                aria-controls="nav-home" aria-selected="false">Carrito</a>
            <a class="nav-item nav-link text-success active" id="nav-buzon-tab" href="/cliente/pedidos/historial" role="tab"
                aria-controls="nav-profile" aria-selected="true">
                Mis compras </a>
        </div>
    </nav>

    <div class="tab-content" id="nav-tabContent">

        <div class="tab-pane fade active show pb-3" id="nav-content" role="tabpanel">
            <div class="card border-0 pt-3" style="background-color: rgb(250, 250, 250);">

                <div class="row">


                    <div class="col-12 p-2">
                        <div class="card ">
                            <div class="table-responsive-lg" style="border-top: 0;">
                                <!--Para encerrar la tabla responsive-->
                                <table class="table b-0">
                                    <thead>
                                        <tr>
                                            <th scope="col"># Pedido</th>
                                            <th scope="col">Valor Total</th>
                                            <th scope="col">Estado</th>
                                            <th scope="col">Opciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each rowsHistorialPedidos}}
                                        <tr>
                                            <th scope="row">{{pkIdVenta}}</th>
                                            <td>${{montoTotal}}</td>
                                            <td>{{estado}}</td>
                                            <td>
                                                <a href="/cliente/pedidos/detallesPedido/{{pkIdVenta}}"
                                                        class="btn btn-primary p-0 pr-2 pl-2" style="font-size: 20px;"
                                                        data-toggle="tooltip" title="Ver pedido"><i
                                                            class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        </tr>
                                        {{else}}
                                        <tr>
                                            <td>No hay Pedidos</td>
                                        </tr>
                                        {{/each}}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </div>

</div>

{{>navegacionCliente}}