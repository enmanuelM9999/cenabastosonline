<div class="container mt-3">

    <h2>Listado Reclamos</h2>

        <div class="card border-0 pt-3" style="background-color: rgb(250, 250, 250);">

            <div class="row">


                <div class="col-12 p-2">
                    <div class="card ">
                        <div class="table-responsive-lg" style="border-top: 0;">
                            <!--Para encerrar la tabla responsive-->
                            <table class="table b-0">
                                <thead>
                                    <tr>
                                        <th scope="col"># Venta</th>
                                        <th scope="col">Nombre Cliente</th>
                                        <th scope="col">Nombre Local</th>
                                        <th scope="col">Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each rowsListaReclamos}}
                                    <tr>
                                        <th scope="row">{{pkIdVenta}}</th>
                                        <td>{{nombresPersonaNatural}} {{apellidosPersonaNatural}}</td>
                                        <td>{{nombreLocal}}</td>
                                        <td>
                                            <a href="/administrador/reclamos/detallesPedido/{{pkIdVenta}}"
                                                    class="btn btn-success p-0 pr-2 pl-2" style="font-size: 20px;"
                                                    data-toggle="tooltip" title="Ver Pedido"><i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/administrador/reclamos/cancelarPedido/{{pkIdVenta}}"
                                                    class="btn btn-danger p-0 pr-2 pl-2" style="font-size: 20px;"
                                                    data-toggle="tooltip" title="Cancelar Pedido"><i class="fas fa-window-close"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    </tr>
                                    {{else}}
                                    <tr>
                                        <td>No hay Reclamos</td>
                                    </tr>
                                    {{/each}}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>



            </div>
        </div>
     
</div>



{{>navegacionAdmin}}