<div class="container mt-3">
    <div class="row d-flex justify-content-center">
        <img src="{{rowProducto.rutaImagen}}" class="img-fluid" alt="{{rowProducto.nombreProducto}}" style="width: 100px; height: 100px;">
    </div>

    <div class="row">

        <div class="col-12 p-2">

            <div class="card p-4">
                <form action="/administrador/productos/editarProducto" method="POST" name="form" id="form">
                    <input type="hidden" name="id" value="{{rowProducto.pkIdProducto}}">

                    <div class="form-group">
                        <label for="nameProd">Nombre Producto</label>
                        <input type="text" class="form-control" value="{{rowProducto.nombreProducto}}" id="nameProd" name="nameProd">
                    </div>
                    
                    <div class="form-group">
                        <label for="descProd">¿Qué tipo de Categoria es?</label>
                            <select name="descProd" id="descProd" class="form-control">
                                {{#each rowsCategorias}}
                                    <option value="{{pkIdCategoriaProducto}}" {{selected}}>{{descripcionCategoriaProducto}}</option>
                                {{/each}}  
                            </select>
                    </div>

                    <div class="form-group">
                        <label for="cssProp">Propiedades CSS</label>
                        <textarea name="cssProp" id="cssProp" class="form-control" form="form"
                            cols="1">{{rowProducto.cssPropertiesBg}}</textarea>
                    </div>

                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="imagen" name="imagen">
                            <label class="custom-file-label" for="imagen" aria-describedby="uploadImg">Elegir Imagen</label>
                        </div>
                        <div class="input-group-append">
                            <span class="input-group-text" id="uploadImg">Subir Imagen</span>
                        </div>
                    </div>


                    <button type="submit" class="btn btn-success">Actualizar</button>
                </form>
            </div>

        </div>
    </div>

</div>

{{>navegacionAdmin}}