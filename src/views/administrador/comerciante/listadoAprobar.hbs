<div class="container mt-3">

    <h2>Comerciantes</h2>
    <nav class="mt-4 border-0">
        <div class="nav nav-tabs border-0" id="nav-tab" role="tablist">
            <a class="nav-item nav-link text-success active" id="nav-pedidos-tab" href="/administrador/comerciante/comercianteListado" role="tab"
                aria-controls="nav-home" aria-selected="true">Aprobar Comerciantes</a>
            <a class="nav-item nav-link text-success" id="nav-buzon-tab" href="/administrador/comerciante/buscarLocal" role="tab"
                aria-controls="nav-profile" aria-selected="false">Informacion Comerciante</a>
            <a class="nav-item nav-link text-success" id="nav-buzon-tab" href="/administrador/comerciante/actualizarHoras" role="tab"
            aria-controls="nav-profile" aria-selected="false">Actualizar Hora Locales</a>
        </div>
    </nav>

    <div class="tab-content" id="nav-tabContent">

        <div class="tab-pane fade active show pb-3" id="nav-content" role="tabpanel">
            <div class="card border-0 pt-3" style="background-color: rgb(250, 250, 250);">

                <div class="row">


                    <div class="col-12 p-2">
                        <div class="card ">
                            <div class="table-responsive-lg" style="border-top: 0;">
                                <!--Para encerrar la tabla responsive-->
                                <table class="table b-0">
                                    <thead>
                                        <tr>
                                            <th scope="col"># Documento</th>
                                            <th scope="col">Nombres</th>
                                            <th scope="col">Correo</th>
                                            <th scope="col">Opciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each rowsListadoComerciantesAprobar}}
                                        <tr>
                                            <th scope="row">{{numeroDocumento}}</th>
                                            <td>{{nombresPersonaNatural}} {{apellidosPersonaNatural}}</td>
                                            <td>{{correoUsuario}}</td>
                                            <td>
                                                <a href="/administrador/comerciante/aceptarComerciante/{{pkIdComerciante}}"
                                                        class="btn btn-success p-0 pr-2 pl-2" style="font-size: 20px;"
                                                        data-toggle="tooltip" title="Aceptar Comerciante"><i class="fas fa-check-square"></i>
                                                </a>
                                                <a href="/administrador/comerciante/rechazarComerciante/{{pkIdComerciante}}"
                                                        class="btn btn-danger p-0 pr-2 pl-2" style="font-size: 20px;"
                                                        data-toggle="tooltip" title="Rechazar Comerciante, Borrar Registro"><i class="fas fa-window-close"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        </tr>
                                        {{else}}
                                        <tr>
                                            <td>No hay Solicitudes</td>
                                        </tr>
                                        {{/each}}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </div>

</div>



{{>navegacionAdmin}}