<div class="container mt-4">

    <h2>Modificar hora de apertura y cierre de locales</h2>
    <nav class="mt-4 border-0">
        <div class="nav nav-tabs border-0" id="nav-tab" role="tablist">
            <a class="nav-item nav-link text-success" id="nav-pedidos-tab" href="/administrador/comerciante/comercianteListado" role="tab"
                aria-controls="nav-home" aria-selected="false">Aprobar Comerciantes</a>
            <a class="nav-item nav-link text-success" id="nav-buzon-tab" href="/administrador/comerciante/buscarLocal" role="tab"
                aria-controls="nav-profile" aria-selected="false">Informacion Comerciante</a>
            <a class="nav-item nav-link text-success active" id="nav-buzon-tab" href="/administrador/comerciante/actualizarHoras" role="tab"
            aria-controls="nav-profile" aria-selected="true">Actualizar Hora Locales</a>
        </div>
    </nav>


    <div class="tab-content" id="nav-tabContent">

        <div class="tab-pane fade active show pb-3" id="nav-content" role="tabpanel">
            <div class="card border-0 pt-3" style="background-color: rgb(250, 250, 250);">

                <div class="row">

                    <div class="col-12 p-2">

                        <div class="card">

                            <div class="p-2">
                                <h4>Horas de locales mayoristas</h4>
                                <form action="/administrador/comerciante/actualizarHoraMayorista" method="post" name="form" id="form">
                                    <div class="form-group">
                                        <label for="horaA">Hora Apertura Locales Mayoristas</label>
                                        <input type="time" class="form-control" id="horaA" name="horaA" value="{{rowsListadoComerciantesAprobar.horaAperturaMayorista}}">
                                    </div>
                                    <div class="form-group">
                                        <label for="horaC">Hora Cierre Locales Mayoristas</label>
                                        <input type="time" class="form-control" id="horaC" name="horaC" value="{{rowsListadoComerciantesAprobar.horaCierreMayorista}}">
                                    </div>
                                    <button type="submit" class="btn btn-success">Actualizar Horas</button>
                                </form>
                            </div>

                        </div>

                    </div>

                    <div class="col-12 p-2">

                        <div class="card">

                            <div class="p-2">
                                <h4>Horas de locales minoristas</h4>
                                <form action="/administrador/comerciante/actualizarHoraMinorista" method="post" name="form" id="form">
                                    <div class="form-group">
                                        <label for="horaA">Hora Apertura Locales Minorista</label>
                                        <input type="time" class="form-control" id="horaA" name="horaA" value="{{rowsListadoComerciantesAprobar.horaAperturaMinorista}}">
                                    </div>
                                    <div class="form-group">
                                        <label for="horaC">Hora Cierre Locales Minorista</label>
                                        <input type="time" class="form-control" id="horaC" name="horaC" value="{{rowsListadoComerciantesAprobar.horaCierreMinorista}}"> 
                                    </div>
                                    <button type="submit" class="btn btn-success">Actualizar Horas</button>
                                </form>
                            </div>

                        </div>

                    </div>

                </div> 

            </div>
        </div>
    </div>

</div>

{{>navegacionAdmin}}