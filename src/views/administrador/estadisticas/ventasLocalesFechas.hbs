<div class="container mt-3">

    <h2>Estadisticas</h2>
    <nav class="mt-4 border-0">
        <div class="nav nav-tabs border-0" id="nav-tab" role="tablist">
            <a class="nav-item nav-link text-success" id="nav-pedidos-tab"
                href="/administrador/estadisticas/buscarPorFechas" role="tab" aria-controls="nav-home"
                aria-selected="false">Buscar Locales</a>
            <a class="nav-item nav-link text-success" id="nav-buzon-tab"
                href="/administrador/estadisticas/buscarTodosLocales" role="tab" aria-controls="nav-profile"
                aria-selected="false">Vendido En Total Por Todos los Locales</a>
            <a class="nav-item nav-link text-success active" id="nav-buzon-tab"
                href="/administrador/estadisticas/totalVendidoFechas" role="tab" aria-controls="nav-profile"
                aria-selected="true">Total Vendido por fechas</a>
        </div>
    </nav>

    <div class="tab-content" id="nav-tabContent">

        <div class="tab-pane fade active show pb-3" id="nav-content" role="tabpanel">
            <div class="card border-0 pt-3" style="background-color: rgb(250, 250, 250);">

                <div class="row">


                    <div class="col-12 p-2">

                        <div class="card p-2">

                            <form action="/administrador/estadisticas/totalVendidoFechas" method="POST" name="form" id="form">
                                <div class="d-flex col-12 row">
                                    <div class="col-12 col-md-5">
                                        <div class="form-group">
                                            <label for="dateInicio">Fecha Inicio</label>
                                            <input type="date" class="form-control" value="" id="dateInicio" name="dateInicio">
                                        </div>
                                    </div>

                                    <div class="col-12 col-md-5">
                                        <div class="form-group">
                                            <label for="dateFin">Fecha Fin</label>
                                            <input type="date" class="form-control" value="" id="dateFin" name="dateFin">
                                        </div>
                                    </div>

                                    <div class="col-2 mt-auto mb-auto flex-shrink-1">
                                        <button type="submit" class="btn btn-success"><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </form>

                            {{{rangoBuscado}}}

                            <ul class="list-group mt-3">
                                {{#each rowsLocalesComerciante}}
                                <li class="list-group-item">
                                    
                                    <div>
                                        <h4 class="mt-2">Local {{idLocalEnCenabastos}} - {{nombreLocal}} </h4>
                                        <label>Nombre del Propietario del Local o Locales:  {{nombresPersonaNatural}} {{apellidosPersonaNatural}}</label> <br>
                                        <label> Total vendido: ${{totalMostar}}</label>
                                    </div>

                                </li>
                                {{/each}}
                            </ul>


                        </div>
                        
                    </div>



                </div>
            </div>
        </div>
    </div>

</div>



{{>navegacionAdmin}}