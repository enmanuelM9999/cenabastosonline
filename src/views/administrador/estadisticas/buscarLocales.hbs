<div class="container mt-3">

    <h2>Estadisticas</h2>
    <nav class="mt-4 border-0">
        <div class="nav nav-tabs border-0" id="nav-tab" role="tablist">
            <a class="nav-item nav-link text-success active" id="nav-pedidos-tab"
                href="/administrador/estadisticas/buscarPorFechas" role="tab" aria-controls="nav-home"
                aria-selected="true">Buscar Locales</a>
            <a class="nav-item nav-link text-success" id="nav-buzon-tab"
                href="/administrador/estadisticas/buscarTodosLocales" role="tab" aria-controls="nav-profile"
                aria-selected="false">Vendido En Total Por Todos los Locales</a>
            <a class="nav-item nav-link text-success" id="nav-buzon-tab"
                href="/administrador/estadisticas/totalVendidoFechas" role="tab" aria-controls="nav-profile"
                aria-selected="false">Total Vendido por fechas</a>
        </div>
    </nav>

    <div class="tab-content" id="nav-tabContent">

        <div class="tab-pane fade active show pb-3" id="nav-content" role="tabpanel">
            <div class="card border-0 pt-3" style="background-color: rgb(250, 250, 250);">

                <div class="row">


                    <div class="col-12 p-2">


                        <form action="/administrador/estadisticas/buscarLocal" method="POST">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" name="cedula" id="cedula" placeholder="Ingresar Cedula Comerciante">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-success" type="submit"><i
                                            class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </form>

                        {{#if nombrePropietario}}
                            <h4 class="mt-2">Nombre del Propietario del Local o Locales:  {{nombrePropietario}}</h4>
                                <div class="accordion shadow" id="listadoLocalesAcordion2">
                                    {{#each rowsLocalesComerciante}}
                                        <div class="card">
                                            <div class="" id="listadoLocalesCabecera{{pkIdLocalComercial}}">
                                                <h4 class="mb-0">
                                                    <button class="btn btn-outline-light text-dark text-decoration-none btn-block text-left" type="button" data-toggle="collapse" data-target="#listadoLocalesCollapse{{pkIdLocalComercial}}" aria-expanded="false" aria-controls="listadoLocalesCollapse{{pkIdLocalComercial}}">
                                                        <h4><i class="fas fa-caret-down"></i> {{idLocalEnCenabastos}} - {{nombreLocal}}</h4>
                                                    </button>
                                                </h4>
                                            </div>

                                            <div id="listadoLocalesCollapse{{pkIdLocalComercial}}" class="collapse" aria-labelledby="listadoLocalesCabecera{{pkIdLocalComercial}}" data-parent="#listadoLocalesAcordion2">
                                                <div class="card-body">
                                                    <a href="/administrador/estadisticas/buscarFechas/{{pkIdLocalComercial}}" class="btn btn-success p-0 pr-2 pl-2" style="font-size: 20px;" data-toggle="tooltip" title="Ver Local">Buscar por Fechas <i class="fas fa-search-dollar"></i> </a>
                                                    <br>
                                                    <label>Total Vendido por el local: ${{totalVendido}}</label>
                                                </div>
                                            </div>
                                        </div>
                                    {{/each}}
                                </div>
                        {{/if}}


                        
                    </div>



                </div>
            </div>
        </div>
    </div>

</div>



{{>navegacionAdmin}}